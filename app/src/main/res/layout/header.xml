<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"


    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/custom_margin_horizontal"
    android:paddingBottom="@dimen/custom_margin_horizontal"
    android:paddingLeft="@dimen/custom_margin_horizontal"
    android:paddingRight="@dimen/custom_margin_horizontal"
    android:background="#bababa">

    <TextView
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="2"
    android:text="Name"/>

    <TextView
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:text="Seats"/>

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Wait Time"/>

</LinearLayout>