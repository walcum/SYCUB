<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/custom_margin_vertical"
    android:paddingRight="@dimen/custom_margin_vertical"
    android:paddingTop="@dimen/custom_margin_vertical"
    android:paddingBottom="@dimen/custom_margin_vertical" >

    <TextView
        android:id="@+id/textViewName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textViewNumOfGuests"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textViewWaitTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"/>


</LinearLayout>
